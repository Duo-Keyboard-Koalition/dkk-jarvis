{
  "expo": {
    "name": "JARVIS AR Assistant",
    "slug": "jarvis-ar-assistant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f0020"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dkk.jarvis.ar",
      "infoPlist": {
        "NSCameraUsageDescription": "JARVIS needs camera access for AR features",
        "NSMicrophoneUsageDescription": "JARVIS needs microphone access for voice interaction"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f0020"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.dkk.jarvis.ar",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-av"
    ]
  }
}
